<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp">
    <!-- tvIDCHPU -->
    <TextView
        android:id="@+id/tvIDCOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="16sp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="-500dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/tvFechaCOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHA"
        android:textSize="16sp"
        android:layout_below="@+id/tvIDCOM"
        android:layout_marginTop="0dp"/>

    <!-- tvCHPU -->
    <TextView
        android:id="@+id/tvUsuarioCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textSize="16sp"
        android:layout_below="@+id/tvFechaCOM"
        android:layout_alignParentStart="true" />
    <!-- tvUsuarioCHPU -->
    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="16sp"
        android:layout_below="@+id/tvFechaCOM"
        android:layout_toEndOf="@+id/tvUsuarioCom"
        android:layout_marginStart="5dp" />
    <!-- tvConCHPU -->
    <TextView
        android:id="@+id/tvComentariolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje:"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvUsuarioCom"
        android:layout_alignParentStart="true" />
    <!-- tvContenidoCHPU -->
    <TextView
        android:id="@+id/tvComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contenido"
        android:textSize="18sp"
        android:layout_alignTop="@+id/tvComentariolabel"
        android:layout_toEndOf="@+id/tvComentariolabel"
        android:layout_marginStart="5dp" />

</RelativeLayout>